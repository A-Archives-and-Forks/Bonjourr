{
	"manifest_version": 2,
	"name": "__MSG_extensionName__",
	"short_name": "Bonjourr",
	"version": "1.15.0.1",
	"description": "__MSG_extensionDesc__",
	"author": "Victor Azevedo and Tahoe Beetschen",
	"homepage_url": "https://bonjourr.fr",
	"default_locale": "en",

	"icons": {
		"128": "assets/favicon-128x128.png",
		"512": "assets/favicon-512x512.png"
	},

	"chrome_url_overrides": {
		"newtab": "index.html"
	},

	"chrome_settings_overrides": {
		"homepage": "index.html"
	},

	"background": {
		"scripts": ["scripts/background.js"]
	},

	"permissions": ["storage", "unlimitedStorage", "geolocation"],
	"optional_permissions": ["bookmarks"],

	"browser_specific_settings": {
		"gecko": {
			"id": "{4f391a9e-8717-4ba6-a5b1-488a34931fcb}",
			"strict_min_version": "56.0"
		}
	}
}
