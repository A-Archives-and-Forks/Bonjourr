{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"linter": {
		"enabled": true,
		"include": ["src"],
		"rules": {
			"all": true,
			"suspicious": {
				"noConsole": "info"
			},
			"complexity": {
				"noForEach": "info"
			},
			"correctness": {
				"useImportExtensions": "off",
				"noUndeclaredVariables": "info"
			},
			"style": {
				"noNamespace": "off",
				"useNamingConvention": "info"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentWidth": 4,
		"indentStyle": "tab"
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"lineWidth": 120,
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"arrowParentheses": "asNeeded"
		}
	},
	"css": {
		"formatter": {
			"quoteStyle": "single",
			"lineWidth": 120
		}
	},
	"organizeImports": {
		"enabled": false
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	}
}
