{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"linter": {
		"enabled": true,
		"include": ["src", "tasks"],
		"rules": {
			"all": true,
			"suspicious": {
				"noConsole": "off"
			},
			"correctness": {
				"useImportExtensions": "off",
				"noUndeclaredVariables": "off"
			},
			"style": {
				"noNamespace": "off",
				"useNamingConvention": "off",
				"useExplicitLengthCheck": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentWidth": 4,
		"indentStyle": "tab"
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"lineWidth": 120,
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"arrowParentheses": "asNeeded"
		},
		"globals": [
			"chrome",
			"browser",
			"Sync",
			"Local",
			"Backgrounds",
			"Links",
			"Weather",
			"Quotes",
			"Widgets"
		]
	},
	"css": {
		"formatter": {
			"quoteStyle": "single",
			"lineWidth": 120
		}
	},
	"organizeImports": {
		"enabled": false
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	}
}
