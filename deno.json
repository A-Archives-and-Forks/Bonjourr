{
	"$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
	"version": "20.4.2",
	"tasks": {
		"build": "deno run --allow-all ./tasks/build.ts",
		"edge": "deno run --allow-all ./tasks/build.ts edge dev",
		"chrome": "deno run --allow-all ./tasks/build.ts chrome dev",
		"firefox": "deno run --allow-all ./tasks/build.ts firefox dev",
		"safari": "deno run --allow-all ./tasks/build.ts safari dev",
		"online": "deno run --allow-all ./tasks/build.ts online dev",
		"docker": "deno run --allow-all ./tasks/build.ts online prod",
		"translate": "deno run --allow-all ./tasks/translate.js",
		"check": "biome check --diagnostic-level error --max-diagnostics none",
		"lint": "biome lint --write --unsafe --max-diagnostics none",
		"format": "biome format --write --max-diagnostics none"
	},
	"imports": {
		"@types/chrome": "npm:@types/chrome@^0.0.315",
		"@victr/deepmerge": "npm:@victr/deepmerge@^1.3.2",
		"clickdown": "npm:clickdown@^1.2.2",
		"esbuild": "npm:esbuild@^0.25.2",
		"idb-keyval": "npm:idb-keyval@^6.2.1",
		"pocket-editor": "npm:pocket-editor@^2.4.1",
		"prism-code-editor": "npm:prism-code-editor@^3.4.0",
		"user-agent-data-types": "npm:user-agent-data-types@^0.4.2",
		"web-ext-types": "npm:web-ext-types@^3.2.1"
	},
	"lint": {
		"include": [
			"src"
		],
		"rules": {
			"tags": [
				"recommended"
			]
		}
	},
	"fmt": {
		"indentWidth": 4,
		"lineWidth": 120,
		"useTabs": true,
		"semiColons": false,
		"singleQuote": true
	},
	"compilerOptions": {
		"strict": true,
		"lib": [
			"deno.window",
			"esnext",
			"dom",
			"dom.iterable"
		],
		"types": [
			"user-agent-data-types",
			"web-ext-types",
			"chrome"
		]
	}
}
