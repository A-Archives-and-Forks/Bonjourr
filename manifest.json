{
	"manifest_version": 2,
	"name": "__MSG_extensionName__",
	"short_name": "Bonjourr",
	"version": "1.5.3",
	"description": "__MSG_extensionDesc__",
	"author": "Victor Azevedo and Tahoe Beetschen",
	"default_locale": "en",

	"icons": {
		"128": "chromeicon.png",
	    "120": "favicon.png"
  	},

	"chrome_url_overrides" : {
		"newtab": "index.html"
	},

	"offline_enabled": true,
	"background": {
		"scripts": ["src/scripts/background_chrome.js"]
	},

	"permissions": [
		"webRequest",
		"storage",
		"unlimitedStorage",
		"management",
		"geolocation"
	]
}